





<!--Login Page-->  

<div class="row row-cols-md-2 login-page">
    <div class="container login-form border">
        <div class="container d-flex justify-content-center align-items-center flex-column">
            <div class="form-title">
                LOGIN
            </div>
            <form asp-action="Index" method="post" class="form-inputs d-flex justify-content-center align-items-center flex-column" style="gap: 1rem;">
                <input type="text" name="username" class="input-input" placeholder="Enter Email:">
                <input type="password" name="password" class="input-input" placeholder="Enter Password:">
                <input type="submit" value="Login" class="input-submit">
            </form>
            <a href="" style="text-decoration: none; color: black;" class="mt-3">Forgot Password?</a>
        </div>
        <a href="" style="text-decoration: none; margin-top: 20%;">Register Account</a>
    </div>
  <div class="container login-brand">
        <img src="~/img/qcu-logo.png" alt="Quezon City University" class="img-fluid">
        <h1>Quezon City University</h1> <hr>
        <h2>Student Attendance System</h2>
    </div>
</div>

@if (ViewBag.ErrorMessage != null)
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: '@ViewBag.ErrorMessage'
        });
    </script>
}